{
    "name": "unique-service",
    "version": "1.0.0",
    "author": "Iryna Lian",
    "main": "index.js",
    "jest": {
        "testEnvironment": "node"
    },
    "scripts": {
        "build": "npx tsc",
        "debug": "node --inspect=0.0.0.0 -r ts-node/register ./index.ts",
        "server": "node dist/index.js",
        "dev": "nodemon",
        "migrate": "dotenv db-migrate up",
        "migrate:down": "dotenv db-migrate reset",
        "migrate:create": "db-migrate create",
        "clean": "rm -rf dist",
        "lint": "eslint . --ext .js,.ts --quiet --fix",
        "test-lint": "eslint .",
        "test": "npm run schema-migrate && npm run test-migrate && jest --coverage --coverageReporters lcov && eslint . && tsc --noemit",
        "test:coverage": "jest --coverage",
        "test-ci": "npm run schema-migrate && npm run test-migrate && jest --coverage --coverageReporters lcov",
        "unit-test": "jest --coverage --coverageReporters lcov --testPathIgnorePatterns integration-test/*",
        "test-interactive": "jest --watchAll",
        "update-api-docs": "npx swagger-markdown -i ../docs/swagger.yml -o ../docs/api.md"
    },
    "dependencies": {
        "body-parser": "^1.20.0",
        "dotenv": "^16.0.1",
        "dotenv-cli": "^6.0.0",
        "express": "^4.18.1",
        "humps": "^2.0.1",
        "knex": "^2.2.0",
        "pg": "^8.7.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/humps": "^2.0.0",
        "@types/jest": "^25.2.3",
        "@types/lodash": "^4.14.156",
        "@types/node": "^14.0.4",
        "@types/supertest": "^2.0.9",
        "celebrate": "^15.0.1",
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.2.2",
        "eslint": "^8.21.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^28.1.3",
        "jest-mock-extended": "^2.0.7",
        "joi": "^17.6.0",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    }
}
